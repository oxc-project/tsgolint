{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "definitions": {
    "naming_convention_options": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/naming_convention_option"
      }
    },
    "naming_convention_option": {
      "type": "object",
      "properties": {
        "selector": {
          "oneOf": [
            { "type": "string" },
            {
              "type": "array",
              "items": { "type": "string" }
            }
          ],
          "description": "The selector(s) to match."
        },
        "format": {
          "oneOf": [
            {
              "type": "array",
              "items": { "type": "string" }
            },
            { "type": "null" }
          ],
          "description": "The format(s) to enforce. null means no format check."
        },
        "custom": {
          "$ref": "#/definitions/match_regex"
        },
        "filter": {
          "oneOf": [
            { "type": "string" },
            { "$ref": "#/definitions/match_regex" }
          ],
          "description": "A filter to only apply this config to names matching the regex."
        },
        "leadingUnderscore": {
          "type": "string",
          "description": "How to handle leading underscores."
        },
        "trailingUnderscore": {
          "type": "string",
          "description": "How to handle trailing underscores."
        },
        "prefix": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Required prefix(es)."
        },
        "suffix": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Required suffix(es)."
        },
        "modifiers": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Modifier(s) that the identifier must have."
        },
        "types": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Type(s) that the identifier must have."
        }
      },
      "required": ["selector", "format"],
      "additionalProperties": false
    },
    "match_regex": {
      "type": "object",
      "properties": {
        "match": { "type": "boolean" },
        "regex": { "type": "string" }
      },
      "required": ["match", "regex"]
    }
  }
}
