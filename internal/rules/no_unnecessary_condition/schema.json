{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "definitions": {
    "no_unnecessary_condition_options": {
      "type": "object",
      "properties": {
        "allowConstantLoopConditions": {
          "description": "Whether to allow constant loop conditions. true is treated as \"always\", false as \"never\".",
          "oneOf": [
            {
              "type": "boolean"
            },
            {
              "type": "string",
              "enum": [
                "never",
                "always",
                "only-allowed-literals"
              ]
            }
          ],
          "default": "never"
        },
        "checkTypePredicates": {
          "type": "boolean",
          "description": "Whether to check type predicate functions.",
          "default": false
        }
      }
    }
  }
}
