FROM node:24.4

RUN corepack enable

RUN wget https://github.com/sharkdp/hyperfine/releases/download/v1.19.0/hyperfine_1.19.0_amd64.deb \
 && dpkg -i hyperfine_1.19.0_amd64.deb

COPY ./tsgolint /tsgolint
COPY ./benchmarks /benchmarks

WORKDIR /benchmarks

RUN ./clone-projects.sh
RUN ./setup.sh

RUN ./bench.sh
